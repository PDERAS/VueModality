{
  "name": "@pderas/modality",
  "version": "1.4.1",
  "description": "An easy to use, yet flexible modals library for Vue.js",
  "main": "dist/modality.umd.min.js",
  "module": "dist/modality.umd.min.js",
  "scripts": {
    "lint": "eslint src --ext .js,.vue",
    "lint:fix": "eslint src --ext .js,.vue --fix",
    "watch": "vue-cli-service build --watch --target lib --name modality ./src/index.js",
    "bundle": "vue-cli-service build --target lib --name modality ./src/index.js",
    "build": "npm run lint && npm run bundle"
  },
  "author": "Reed Jones <reed.jones@pderas.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:PDERAS/VueModality.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "peerDependencies": {
    "vue": "^2.5.17"
  },
  "devDependencies": {
    "@pderas/eslint-config": "^1.1.1",
    "@vue/babel-preset-app": "^4.4.4",
    "@vue/cli-plugin-babel": "^4.4.4",
    "@vue/cli-plugin-eslint": "^4.4.4",
    "@vue/cli-service": "^4.4.4",
    "sass": "^1.26.8",
    "sass-loader": "^8.0.2",
    "vue": "^2.6.11",
    "vue-template-compiler": "^2.6.11"
  },
  "files": [
    "dist/*",
    "src/*"
  ]
}
